{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2022"]
  },
  "include": [
    "ponder-env.d.ts",
    "ponder.config.ts",
    "ponder.schema.ts",
    "src/**/*.ts",
    "abis/**/*.ts"
  ]
}
